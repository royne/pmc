<!DOCTYPE html>
<html>
  <head>
    <title>Pmc</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <% if signed_in? %>
        <ul class="navbar-brand name_nav">
          <%= current_user.username %>
        </ul>
      <% else %>
      <div class="container">
        <a class="navbar-brand" href="#">Navbar</a>
      <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto"></ul>

          <ul class="navbar-nav">
            <li class="nav-item">
              <% if signed_in? %>
                <%= link_to 'Cerrar sesiÃ³n', destroy_user_session_path, method: :delete, class:"nav-link"%>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- navegacion lateral  -->
    <div class="conainer">
      <div class="row justify-content-start">
        <% if signed_in? %>
          <div class="col-sm-2 nav-left">
            <div class="nav-button">
              <%= link_to 'Estudiantes', students_path %>
            </div>
            <div class="nav-button">
              <%= link_to 'Nuevo Estudiante', new_student_path, remote: true %>
            </div>
            <div class="nav-button">
              <%= link_to 'Deudores', debtors_index_path %>
            </div>
            <div class="nav-button">
              <%= link_to 'Por Vencer', expirations_index_path %>
            </div>
            <div class="nav-button">
              <%= link_to 'Estadisticas', statistics_index_path %>
            </div>
            <div class="nav-button">
              <%= link_to 'Inactivos', state_index_path %>
            </div>
            <div class="nav-button">
              <%= link_to 'Descarga xls', xls_students_path(format: :xlsx) %>
            </div>
            <div class="nav-button">
              <%= link_to '<i class="fas fa-arrow-left"></i> Volver'.html_safe, students_path %></i>
            </div>
          </div>

          <div class="col-sm-10">

            <% if flash[:notice] %>
              <div class="alert alert-info"><%= flash[:notice] %></div>
            <% end %>
            <% if flash[:alert] %>
              <div class="alert alert-danger"><%= flash[:alert] %></div>
            <% end %>

            <%= yield %>
          </div>
        <% else %>
          <div class="col-sm-12">

            <% if flash[:notice] %>
              <div class="alert alert-info"><%= flash[:notice] %></div>
            <% end %>
            <% if flash[:alert] %>
              <div class="alert alert-danger"><%= flash[:alert] %></div>
            <% end %>

            <%= yield %>
          </div>
        <% end %>
      </div>
    </div>


  </body>
</html>
