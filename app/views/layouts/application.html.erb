<!DOCTYPE html>
<html>
  <head>
    <title>Pmc</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <% if signed_in? %>
        <ul class="navbar-brand name_nav">
          <%= current_user.username %>
        </ul>
      <% else %>
      <div class="container">
        <a class="navbar-brand" href="/"><img src="<%=asset_path('payzaiens_blanco.png')%>" alt="PayZaiens" style="width:150px"></a>
      <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto"></ul>

          <ul class="navbar-nav">
            <li class="nav-item">
              <% if signed_in? %>
                <%= link_to 'Cerrar sesiÃ³n', destroy_user_session_path, method: :delete, class:"nav-link"%>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- navegacion lateral  -->

    <% if signed_in? %>
      <% if current_user.has_role? :user %>
        <%= render 'layouts/nav_lefth' %>
      <% elsif current_user.has_role? :admin %>
        <%= render 'layouts/nav_lefth_admin' %>
      <% end %>
    <% else %>
      <div class="col-sm-12">
        <% if flash[:notice] %>
        <div class="alert alert-info"><%= flash[:notice] %></div>
        <% end %>
        <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>
      </div>
      <%= yield %>
    <% end %>


  </body>
</html>
