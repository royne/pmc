<div class="container">
  <div class="row justify-content-around">
    <!-- tabla de estudiantes -->
    <div class="col-sm-6">
      <h2>Estudiantes activos</h2>
      <table class="table table-hover table-sm">
        <thead class="thead-light">
          <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Programa</th>
            <th class="text-center">Ver</th>
            <th class="text-center">Pago</th>
          </tr>
        </thead>
        <% @students.each do |student| %>
          <% if signed_in? && student.user == current_user %>
            <tbody>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.course %></td>
                <td class="text-center"><a href="/students/<%= student.id %>"><i class="far fa-eye"></i></a></td>
                <td class="text-center"><a href="<%= root_path %>"><i class="far fa-money-bill-alt"></i></a></td>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>
    </div>
    <!-- numero de estudiantes matriculados -->
    <div class="col-sm-2">
      <div class="">
        <h4>Estudiantes matriculados: </h4>
        <% @students.each do |student| %>
          <% if student.user_id == current_user.id %>
            <% @array_students_user.push(student) %>
          <% end %>
        <% end %>
        <%= @array_students_user.length %>
      </div>
    </div>
    <!-- formulario de busqueda -->
    <div class="col-sm-2">
      <%= form_tag students_path, method: :get do %>
        <div class="form-group">
          <input class="form-control form-control-sm" type="text" placeholder="buscar">
        </div>
        <%= submit_tag "Buscar", name: nil, class: "btn-color btn btn-dark btn-sm btn-block" %>
      <% end %>
    </div>
  </div>
</div>
