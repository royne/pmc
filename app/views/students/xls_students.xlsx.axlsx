wb = xlsx_package.workbook
wb.styles do |s|
  @bold       = s.add_style b: true
end

wb.add_worksheet(name: "Estudiantes") do |sheet|
  sheet.add_row [
                'Id',
                'Nombre',
                'Apellido',
                'Celular',
                'Email',
                'Edad',
                'Direcci√≥n',
                'Programa',
                'Acudiente',
                'Cel Acudiente',
                'Eps',
                'Fecha de matricula',
                'Total pagos'], style: @bold
  @query.each do |student|
    sheet.add_row [
                  student.id,
                  student.name,
                  student.last_name,
                  student.cellphone,
                  student.email,
                  student.age,
                  student.address,
                  student.course,
                  student.legal_guardian,
                  student.phone_lg,
                  student.eps,
                  student.created_at,
                  student.payments.sum(:price)]
  end
end
