<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4 card card-devise">
      <h2>Ingreso de usuarios</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder:"ContraseÃ±a", autocomplete: "off", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label "recordar mis datos" %>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit "ingreso", class:"btn btn-block btn-lg btn-primary"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
